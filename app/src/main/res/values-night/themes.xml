<resources>
    <!-- Base application theme. -->
    <style name="Theme.TMDB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--- colors -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_1</item>
        <item name="colorPrimaryVariant">@color/teal_2</item>
        <item name="colorOnPrimary">@color/black_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_1</item>
        <item name="colorSecondaryVariant">@color/dark_blue_2</item>
        <item name="colorOnSecondary">@color/white_2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorForeground">@color/light_gray</item>
        <item name="colorBackground">@color/black_2</item>

        <item name="colorTextPrimary">@color/white_1</item>
        <item name="colorTextSecondary">@color/white_2</item>
        <item name="colorTextTertiary">@color/light_gray</item>
        <item name="colorTextHeadLine">@color/white_1</item>

        <item name="sizeTextPrimary">@dimen/textPrimary</item>
        <item name="sizeTextSecondary">@dimen/textSecondary</item>
        <item name="sizeTextTertiary">@dimen/textTertiary</item>
        <item name="sizeTextSubHeadLine">@dimen/textSubHeadline</item>
        <item name="sizeTextHeadLine">@dimen/textHeadline</item>

        <item name="marginSizeFull">@dimen/margin16dp</item>
        <item name="marginSizeHalf">@dimen/margin8dp</item>
        <item name="marginSizeQuarter">@dimen/margin4dp</item>
        <item name="marginSize2X">@dimen/margin32dp</item>
        <item name="thumbnailDimen">@dimen/thumbnailImage</item>
        <item name="posterDimen">@dimen/posterImage</item>
        <item name="dividerDimen">@dimen/dividerSize</item>

        <!-- text styles -->
        <item name="textPrimary">@style/TMBDTextPrimary</item>
        <item name="textSecondary">@style/TMBDTextSecondary</item>
        <item name="textDeeplink">@style/TMBDTextDeeplink</item>
        <item name="textTertiary">@style/TMBDTextTertiary</item>
        <item name="textSubHeadLine">@style/TMBDTextSubHeadLine</item>
        <item name="textHeadLine">@style/TMBDTextHeadLine</item>

        <!-- content desc -->
        <item name="contentDescMovieThumbnail">@string/content_desc_movie_thumbnail</item>
        <item name="contentDescNoNetworkImage">@string/content_desc_no_network</item>

        <item name="stringNoNetworkError">@string/str_no_network_error</item>
        <item name="stringServerSideError">@string/str_server_side_issue</item>
        <item name="stringClientSideError">@string/str_client_side_issue</item>

        <!-- button style -->
        <item name="buttonColored">@style/TMBDButton</item>
        <item name="buttonSmallColored">@style/TMBDButtonSmall</item>

        <!-- anim -->
        <item name="slideInEnterAnim">@anim/slide_in</item>
        <item name="fadeOutExitAnim">@anim/fade_out</item>
        <item name="fadeInPopInAnim">@anim/fade_in</item>
        <item name="slideOutPopOutAnim">@anim/slide_out</item>
    </style>
</resources>
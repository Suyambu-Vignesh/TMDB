<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMDB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--- colors -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_1</item>
        <item name="colorPrimaryVariant">@color/dark_blue_2</item>
        <item name="colorOnPrimary">@color/white_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_1</item>
        <item name="colorSecondaryVariant">@color/teal_2</item>
        <item name="colorOnSecondary">@color/black_2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorForeground">@color/white_2</item>
        <item name="colorBackground">@color/black_2</item>

        <item name="colorTextPrimary">@color/black_1</item>
        <item name="colorTextSecondary">@color/black_2</item>
        <item name="colorTextTertiary">@color/dark_gray</item>
        <item name="colorTextHeadLine">@color/black_1</item>

        <item name="sizeTextPrimary">@dimen/textPrimary</item>
        <item name="sizeTextSecondary">@dimen/textSecondary</item>
        <item name="sizeTextTertiary">@dimen/textTertiary</item>
        <item name="sizeTextHeadLine">@dimen/textHeadline</item>

        <item name="marginSizeFull">@dimen/margin16dp</item>
        <item name="marginSizeHalf">@dimen/margin8dp</item>
        <item name="marginSizeQuarter">@dimen/margin4dp</item>
        <item name="thumbnailDimen">@dimen/thumbnailImage</item>
        <item name="thumbnailSmall">@dimen/thumbnailSmall</item>
        <item name="dividerDimen">@dimen/dividerSize</item>

        <!-- text styles -->
        <item name="textPrimary">@style/TMBDTextPrimary</item>
        <item name="textSecondary">@style/TMBDTextSecondary</item>
        <item name="textTertiary">@style/TMBDTextTertiary</item>
        <item name="textHeadLine">@style/TMBDTextHeadLine</item>
    </style>

    <style name="Theme.TMDB.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TMDB.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TMDB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>